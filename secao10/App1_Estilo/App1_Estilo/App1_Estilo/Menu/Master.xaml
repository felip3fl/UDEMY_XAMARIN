             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:ini="clr-namespace:App1_Estilo"
             mc:Ignorable="d"
             x:Class="App1_Estilo.Menu.Master">

    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout>
                <Button Text="Style" Clicked="GoPagina1"/>
                
